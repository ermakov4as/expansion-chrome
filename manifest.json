{
    "name": "Almanac 20/80 Additional Tools",
    "version": "1.0.0",

    "manifest_version": 2,

    "icons": {
        "48": "/images/icon48.png"
    },

    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["content_scripts/end.js"],
        "run_at": "document_end"
    }],

    "browser_action": {
        "default_icon": {
            "19": "/images/icon19.png",
            "48": "/images/icon38.png"
        },
        "default_title": "Almanac 20/80",
        "default_popup": "popup/popup.html"
    }
}